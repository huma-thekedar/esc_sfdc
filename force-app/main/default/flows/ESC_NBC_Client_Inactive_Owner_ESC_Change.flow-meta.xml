<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <decisions>
        <name>Check_What_changed</name>
        <label>Check What changed</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Change_to_Active</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.ESC_NBC_Active__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Client_Owner_Sales</targetReference>
            </connector>
            <label>Change to Active</label>
        </rules>
        <rules>
            <name>Change_to_Inactive</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.ESC_NBC_Active__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Client_Owner</targetReference>
            </connector>
            <label>Change to Inactive</label>
        </rules>
    </decisions>
    <description>when a client is marked as inactive, the owner should change to ESC</description>
    <environments>Default</environments>
    <interviewLabel>ESC_NBC_Client_Inactive_Owner_ESC_Change {!$Flow.CurrentDateTime}</interviewLabel>
    <label>ESC_NBC_Client_Inactive_Owner_ESC_Change</label>
    <processMetadataValues>
