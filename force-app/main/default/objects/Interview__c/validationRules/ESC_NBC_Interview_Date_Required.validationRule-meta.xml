<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ESC_NBC_Interview_Date_Required</fullName>
    <active>true</active>
    <description>For Interview Record Type</description>
    <errorConditionFormula>AND(
				 ISNULL(Interview_Date__c),
				 RecordType.DeveloperName == &apos;Interview&apos;
)</errorConditionFormula>
    <errorDisplayField>Interview_Date__c</errorDisplayField>
    <errorMessage>Interview Date is required for interview.</errorMessage>
</ValidationRule>
