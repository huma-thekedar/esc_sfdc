<?xml version="1.0" encoding="UTF-8"?>
<SharingRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <sharingCriteriaRules>
        <fullName>Share_active_Job_Openings_with_Recruiters</fullName>
        <accessLevel>Read</accessLevel>
        <label>Share active Job Openings with Recruiters</label>
        <sharedTo>
            <roleAndSubordinatesInternal>Recruiting_Manager</roleAndSubordinatesInternal>
        </sharedTo>
        <criteriaItems>
            <field>Status__c</field>
            <operation>equals</operation>
            <value>Filled,Active</value>
        </criteriaItems>
        <includeRecordsOwnedByAll>true</includeRecordsOwnedByAll>
    </sharingCriteriaRules>
    <sharingCriteriaRules>
        <fullName>Share_all_Job_Openings_with_Sales_Rep</fullName>
        <accessLevel>Edit</accessLevel>
        <label>Share all Job Openings with Sales Rep</label>
        <sharedTo>
            <roleAndSubordinatesInternal>Sales_Rep_Manager</roleAndSubordinatesInternal>
        </sharedTo>
        <criteriaItems>
            <field>Status__c</field>
            <operation>equals</operation>
            <value>Filled,Inactive,Active</value>
        </criteriaItems>
        <includeRecordsOwnedByAll>true</includeRecordsOwnedByAll>
    </sharingCriteriaRules>
</SharingRules>
